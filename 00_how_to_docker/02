source "_vars" ;

#------------------------------------------------------------------------------#
# Get the IP address of the Char virtual machine.
#------------------------------------------------------------------------------#

# Get the IP address of the VM.
VM_IP=$(docker-machine ip $VM_NAME) ;
echo "Virtual Machine $VM_NAME IP: $VM_IP" ;

export VM_IP ;
exit ;
