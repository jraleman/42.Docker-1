source "_vars" ;

#------------------------------------------------------------------------------#
# Force quit and delete all the containers (whatever their status), in one
# command.
#------------------------------------------------------------------------------#

# Force quit and delete all the containers
docker rm --force $(docker ps -a -q) ;
